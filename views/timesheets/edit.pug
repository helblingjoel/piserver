extend  ../components/header.pug
  
block append body
    .container.is-max-desktop.pl-6.pr-6
        nav.breadcrumb(aria-label="breadcrumbs")
            ul
                li
                    a(href="/") Home
                li
                    a(href="/timesheet") Timesheet
                li.is-active
                    a(href="", aria-current="page") Edit Time
        p.title.is-3 Edit Time
        form(action="/timesheet/edit", method="get", id="edit") 
            input(type='date', name='date', onchange="document.forms['edit'].submit();", value=date).input

        .container.pt-6
        if locals.alert
            .notification.is-warning #{alert}
        if !locals.clock_in
            .notification No data for this day
        else
            table.table.is-fullwidth
                thead
                    tr
                    th Clock In
                    th Break Start
                    th Break End
                    th Clock Out
                    th +/-
                tbody
                    tr
                    td #{clock_in}
                    td #{break_in}
                    td #{break_out}
                    td #{clock_out}
                    if locals.difference
                        td #{difference}
    
            